<view data-weui-theme="{{theme}}" class="margin-sm">
  <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
    <image class="avatar" src="{{avatarUrl}}"></image>
  </button>
  <mp-form>
    <mp-cells>
      <mp-cell title="昵称">
        <input type="nickname" value="{{nickname}}" bindinput="change" class="weui-input" placeholder="请输入昵称" />
      </mp-cell>
    </mp-cells>
  </mp-form>
  <view class="flex flex-column radius-lg">
    <button class="cu-btn bg-green margin-tb-sm lg shadow" bindtap="submit">提交</button>
  </view>
</view>